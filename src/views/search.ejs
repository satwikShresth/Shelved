<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #121212;
      color: #ffffff;
    }

    .search-page {
      background-color: #1e1e1e;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.5);
      width: 80%;
      max-width: 600px;
    }

    #searchForm {
      display: flex;
      margin-bottom: 20px;
      gap: 10px;
    }

    #searchInput {
      flex: 2;
      padding: 10px;
      border: 1px solid #444444;
      border-radius: 4px 0 0 4px;
      background-color: #333333;
      color: #ffffff;
    }

    #searchCategory {
      flex: 1;
      padding: 10px;
      border: 1px solid #444444;
      background-color: #333333;
      color: #ffffff;
      border-radius: 4px;
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
    }

    #searchForm button {
      padding: 10px;
      border: none;
      background-color: #ff6600;
      color: white;
      cursor: pointer;
      border-radius: 0 4px 4px 0;
    }

    #searchForm button:hover {
      background-color: #e65c00;
    }

    #resultsContainer {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    .result-card {
      background-color: #2e2e2e;
      padding: 10px;
      border-radius: 8px;
      width: 200px;
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
      text-align: center;
    }

    .result-card img {
      max-width: 100%;
      border-radius: 4px;
      margin-bottom: 10px;
    }

    .result-card h3 {
      margin: 10px 0;
      color: #ff6600;
    }

    .result-card p {
      color: #cccccc;
    }
  </style>
</head>
<body>
  <div class="search-page">
    <h1>Search Movies and Books</h1>

    <form id="searchForm">
      <input type="text" id="searchInput" placeholder="Search by name or author..." required>
      <select id="searchCategory" required>
        <option value="movies">Movies</option>
        <option value="books">Books</option>
      </select>
      <button type="submit">Search</button>
    </form>

    <div id="resultsContainer"></div>
  </div>

  <script>
    document
      .getElementById("searchForm")
      .addEventListener("submit", async function (event) {
        event.preventDefault();

        const query = document.getElementById("searchInput").value;
        const category = document.getElementById("searchCategory").value;
        const endpoint = category === "movies" ? "/api/movies/search" : "/api/books/search";

        try {
          const response = await fetch(`${endpoint}?query=${query}`);
          const results = await response.json();

          const resultsContainer = document.getElementById("resultsContainer");
          resultsContainer.innerHTML = "";

          results.forEach((item) => {
            const card = document.createElement("div");
            card.className = "result-card";
            card.innerHTML = `
            <img src="${item.poster}" alt="${item.name}" />
            <h3>${item.name}</h3>
            <p>${item.author}</p>
          `;
            resultsContainer.appendChild(card);
          });
        } catch (error) {
          console.error("Error fetching search results:", error);
        }
      });
  </script>
</body>
</html>
